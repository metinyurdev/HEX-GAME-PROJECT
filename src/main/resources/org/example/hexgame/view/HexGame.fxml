    <bottom>
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <RadioButton fx:id="radio5x5" text="5x5"/>
            <RadioButton fx:id="radio11x11" text="11x11"/>
